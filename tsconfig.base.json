{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@openidea/*": ["packages/*/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build", ".next"]
}

